<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mx.com.audioweb.divisas_project.MenuOption">


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Crear Alerta"
        android:id="@+id/caButton"
        android:layout_marginTop="129dp"
        android:textColor="#fff"
        android:background="@color/registro"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/divButton"
        android:layout_alignStart="@+id/divButton" />

    <Button
        android:layout_width="150dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:text="Ver Divisas"
        android:id="@+id/divButton"
        android:background="@color/registro"
        android:textColor="#fff"
        android:layout_below="@+id/caButton"
        android:layout_alignLeft="@+id/salirButton"
        android:layout_alignStart="@+id/salirButton" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Salir"
        android:id="@+id/salirButton"
        android:background="@color/registro"
        android:textColor="#fff"
        android:layout_below="@+id/divButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
